<div class="container">
    <h2>Change Password</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "container") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3 row justify-content-md-center">
        <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
        </div>
      </div>

      <div class="mb-3 row justify-content-md-center">
        <%= f.label :current_password, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-5">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-3 row justify-content-md-center">
        <%= f.label :password, class: "col-sm-2 col-form-label" %><br /> 
        <div class="col-sm-5">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        </div>
        <% if @minimum_password_length %>
          <br />
        <% end %>
      </div>
      <div class="row justify-content-md-center">
        <div class="col-sm-2 col-form-label   ">
        <em><%= @minimum_password_length %> characters minimum</em>
        </div>
      </div>

      <div class="mb-3 row justify-content-md-center">
        <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
        </div>
      </div>


      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <div class="container justify-content-end">
      <h3 >Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
</div>
